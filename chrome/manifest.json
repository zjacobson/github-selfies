{
  "manifest_version": 2,

  "name": "GitHub Selfies",
  "description": "Selfies! For GitHub! Hooray!",
  "version": "2.0.7",

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://github.com/*",
    "https://api.imgur.com/3/image"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "js": [
        "jquery.min.js",
        "b64.js",
        "NeuQuant.js",
        "LZWEncoder.js",
        "GIFEncoder.js",
        "selfie-base.js",
        "selfie.js"
      ],
      "css": [
        "selfie.css"
      ],
      "matches": ["*://github.com/*", "*://github.braintreeps.com/*"]
    }
  ],

  "web_accessible_resources": [
    "jquery-1.10.1.min.map",
    "new-issue.css",
    "issues.css"
  ]

}
